<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension point="bndtools.core.repositoryContributor">
      <repository name="Base" class="bndtools.api.repository.impl.EmbeddedRepository:repo" implicit="true">
         <description>
            The Base repository is built into Bndtools and contains a small number of
            useful bundles.
         </description>
      </repository>
   </extension>
   
   <extension point="bndtools.core.projectTemplates">
      <template name="Component Development (Declarative Services)"
         priority="100"
         class="bndtools.templates.ComponentTemplate"
         docHtml="html/componentTemplate.html"/>
   </extension>
   
   <extension point="bndtools.core.projectTemplates">
      <template name="Integration Testing"
         priority="200"
         class="bndtools.templates.IntegrationTestingTemplate"
         docHtml="html/integrationTestTemplate.html"/>
   </extension>
</plugin>